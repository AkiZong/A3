<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.drawing.a3.MainactivityActivity"
    tools:showIn="@layout/mainactivity"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_gravity="top"
        >

        <Button
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="@drawable/selector"
            android:id="@+id/selector"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="@drawable/eraser"
            android:id="@+id/eraser"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center" />

        <Button
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:background="@drawable/square"
            android:id="@+id/square"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowSpan="2" />

        <Button
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:background="@drawable/circle"
            android:id="@+id/circle"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_rowSpan="2" />

        <Button
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:background="@drawable/line"
            android:id="@+id/line"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_rowSpan="2" />

        <Button
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:background="@drawable/fill"
            android:id="@+id/fill"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_rowSpan="2" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#f00"
            android:id="@+id/red"
            android:layout_row="0"
            android:layout_column="5" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#0f0"
            android:id="@+id/green"
            android:layout_row="1"
            android:layout_column="5" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00f"
            android:id="@+id/blue"
            android:layout_row="0"
            android:layout_column="6" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="..."
            android:background="#fff"
            android:textSize="20px"
            android:id="@+id/more"
            android:layout_row="1"
            android:layout_column="6" />

        <Button
            android:layout_width="22dp"
            android:layout_height="50dp"
            android:background="@drawable/thickone"
            android:id="@+id/thickone"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_rowSpan="2" />

        <Button
            android:layout_width="22dp"
            android:layout_height="50dp"
            android:background="@drawable/thicktwo"
            android:id="@+id/thicktwo"
            android:layout_row="0"
            android:layout_column="8"
            android:layout_rowSpan="2" />

        <Button
            android:layout_width="22dp"
            android:layout_height="50dp"
            android:background="@drawable/thickthree"
            android:id="@+id/thickthree"
            android:layout_row="0"
            android:layout_column="9"
            android:layout_rowSpan="2" />

        <Button
            android:layout_width="22dp"
            android:layout_height="50dp"
            android:background="@drawable/thickfour"
            android:id="@+id/thickfour"
            android:layout_row="0"
            android:layout_column="10"
            android:layout_rowSpan="2" />

    </GridLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/mycanvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20pt"/>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
